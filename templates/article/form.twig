{% extends "layout/app.twig" %}

{% block content %}
    <h1>
        {% if article.id %}
            Upravit článek
        {% else %}
            Vytvořit článek
        {% endif %}
    </h1>
    <div class="row">
        <form action="/article-save" method="post" class="form-horizontal col-md-8 offset-md-2" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{ article.id }}">
            <div class="form-group row">
                <label class="col-md-4 col-form-label" for="name">Název</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" name="name" id="name" value="{{ article.name }}"/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label" for="authors">Autoři</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" name="authors" id="authors" value="{{ article.authors }}"/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label" for="abstract">Abstrakt</label>
                <div class="col-md-8">
                    <textarea class="form-control editor" name="abstract" id="abstract" cols="30" rows="5">{{ article.abstract }}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label" for="abstract">PDF soubor</label>
                <div class="input-group col-md-8">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="file" name="file" accept="application/pdf"/>
                        <label class="custom-file-label" for="file">Vyberte soubor</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="selected-file" class="col-md-4 col-form-label">Vybraný soubor</label>
                <div class="col-md-8">
                    <input type="text" readonly="readonly" class="form-control-plaintext" id="selected-file" value="{{ article.filePath }}"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="ml-auto col-md-8">
                    <input type="submit" class="form-control btn btn-primary" name="submit" value="Uložit"/>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
